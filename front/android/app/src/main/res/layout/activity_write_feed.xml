<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="write"
            type="com.capstone.traffic.ui.feed.writefeed.WriteFeedViewModel" />
    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_gravity="center"
                android:id="@+id/back_btn"
                android:background="@drawable/icon_back"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="게시물 작성"
                android:layout_toEndOf="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/post_btn"
                android:layout_gravity="center"
                android:stateListAnimator="@null"
                android:text="게시"
                android:textSize="15sp"
                android:background="@color/white"
                android:layout_width="45dp"
                android:layout_height="30dp"/>
        </LinearLayout>
        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <ScrollView
            android:background="@color/backgroundWhite"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridLayout
                    android:id="@+id/filter_grid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:columnCount="5"
                    android:rowCount="2">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs1"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs1"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="1호선"
                            android:textColor="@color/hs1"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs2"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs2"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="2호선"
                            android:textColor="@color/hs2"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs3"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs3"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="3호선"
                            android:textColor="@color/hs3"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs4"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs4"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="4호선"
                            android:textColor="@color/hs4"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs5"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs5"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="5호선"
                            android:textColor="@color/hs5"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs6"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs6"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="6호선"
                            android:textColor="@color/hs6"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs7"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs7"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="7호선"
                            android:textColor="@color/hs7"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs8"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs8"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="8호선"
                            android:textColor="@color/hs8"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:strokeColor="@color/hs9"
                        app:strokeWidth="2dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/hs9"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@color/white"
                            android:text="9호선"
                            android:textColor="@color/hs9"
                            android:textSize="13sp" />
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>
                <EditText
                    android:id="@+id/posting_et"
                    android:gravity="top"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:hint="오늘은 어떤 일이 있으셨나요?"
                    android:background="@drawable/background_feed_text"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:backgroundTint="@color/white"
                        android:textAlignment="textStart"
                        android:id="@+id/take_picture_btn"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/emo_take_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:backgroundTint="@color/white"
                        android:textAlignment="textStart"
                        android:id="@+id/add_picture_btn"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/emo_photo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_margin="10dp"
                    android:id="@+id/rcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>