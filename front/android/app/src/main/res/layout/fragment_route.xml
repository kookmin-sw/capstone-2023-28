<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="route"
            type="com.capstone.traffic.ui.HomeViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardElevation="20sp"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/startStationImageView"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/search_cv"
                    app:cardElevation="10dp"
                    android:backgroundTint="@color/black"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="80dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center"
                        android:background="@drawable/background_station_name_in"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardElevation="10dp"
                    android:id="@+id/circle_cv"
                    app:cardBackgroundColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center|start"
                    app:cardCornerRadius="100dp"
                    android:background="@drawable/shape_circle"
                    android:layout_width="60dp"
                    android:layout_height="60dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv"
                        android:layout_marginBottom="2dp"
                        android:textSize="40sp"
                        android:text="1"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/container"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/icon_floating"
                app:borderWidth="0dp"
                app:fabSize="normal"
                app:useCompatPadding="true"
                tools:ignore="SpeakableTextPresentCheck" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subway Lines"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_margin="5sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line1Btn"
                    android:onClick="@{()->route.line1()}"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle1"
                    android:text="@string/n1"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line2Btn"
                    android:onClick="@{()->route.line2()}"
                    android:layout_width="65sp"
                    android:layout_height="65sp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle2"
                    android:text="@string/n2" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line3Btn"
                    android:onClick="@{()->route.line3()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle3"
                    android:text="@string/n3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line4Btn"
                    android:onClick="@{()->route.line4()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle4"
                    android:text="@string/n4" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line5Btn"
                    android:onClick="@{()->route.line5()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle5"
                    android:text="@string/n5" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line6Btn"
                    android:onClick="@{()->route.line6()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle6"
                    android:text="@string/n6" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line7Btn"
                    android:onClick="@{()->route.line7()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle7"
                    android:text="@string/n7" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line8Btn"
                    android:onClick="@{()->route.line8()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle8"
                    android:text="@string/n8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/line9Btn"
                    android:onClick="@{()->route.line9()}"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="5sp"
                    android:background="@drawable/shape_circle9"
                    android:text="@string/n9" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</layout>